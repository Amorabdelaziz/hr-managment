<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Profile</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav>
        <h4>HR Management</h4>
        <ul>
            <li><a href="/employees">Employees</a></li>
            <li><a href="/leave-management">Leave Management</a></li>
            <li><a href="/payroll">Payroll</a></li>
            <li><a class="btn btn-danger" href="/logout">Logout</a></li>
        </ul>
    </nav>

    <!-- Profile Section -->
    <div class="container mt-4">
        <div class="card" style="width: 24rem; margin: 0 auto;">
            <div class="card-header">Employee Profile</div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    <p>{{employee.nom}}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    <p>{{employee.prenom}}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <p>{{employee.email}}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Department</label>
                    <p>{{employee.department_name}}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Zone</label>
                    <p>{{employee.zone_name}}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Experience Years</label>
                    <p>{{employee.experience_years}}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Base Salary</label>
                    <p>{{employee.base_salary}} DZD</p>
                </div>

                <!-- Back Button -->
                <a href="/employees" class="btn btn-success btn-md mt-3">Back</a>
            </div>
        </div>
    </div>
</body>
</html>
